<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.BookDetails"
    android:background="@drawable/bg_img">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:backgroundTint="#C27B3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_marginLeft="-5dp"
            android:contentDescription="@string/backbtn"
            android:id="@+id/btnBackWebpage"
            android:src="@drawable/arrow_back_" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="185dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="start"
            android:paddingStart="10dp"
           android:layout_marginTop="4dp"
            android:layout_marginLeft="-20dp"
            android:paddingEnd="15dp"
            android:text="Category"
            android:textColor="@color/white"
            android:textSize="23sp"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="38dp" />

    </LinearLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="100dp">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivBookCover"
                    android:layout_width="177dp"
                    android:layout_height="211dp"
                    android:layout_gravity="center"
                    tools:layout_editor_absoluteX="75dp"
                    tools:layout_editor_absoluteY="157dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="40dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text="TITLE"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/tvAuthor"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text="AUTHOR"
                        android:textColor="@color/gray" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout4"
                android:background="#F6F6F6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:padding="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sumarrylistlogo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Summary"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#D9D9D9"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:padding="5dp"
                        android:text="This is a sample description that will expand and collapse when you click Show More or Show Less."
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/textview_circle"
                    android:gravity="center"
                    android:text="Subject"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvSubject"
                    android:layout_width="330dp"
                    android:layout_height="35dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/textview_circle_grey"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/textview_circle"
                    android:gravity="center"
                    android:text="Location"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="330dp"
                    android:layout_height="35dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/textview_circle_grey"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="Copies"
                    android:background="@drawable/textview_circle"
                    android:textColor="@color/white"
                    android:layout_margin="8dp"/>

                <TextView
                    android:id="@+id/tvCopies"
                    android:layout_width="330dp"
                    android:layout_height="35dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/textview_circle_grey"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="Publisher"
                    android:background="@drawable/textview_circle"
                    android:textColor="@color/white"
                    android:layout_margin="8dp"/>

                <TextView
                    android:id="@+id/tvPublisher"
                    android:layout_width="330dp"
                    android:layout_height="35dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/textview_circle_grey"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="Status"
                    android:background="@drawable/textview_circle"
                    android:textColor="@color/white"
                    android:layout_margin="8dp"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="330dp"
                    android:layout_height="35dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/textview_circle_grey"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>