<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blur"
    tools:context=".Activities.LoginPage">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/iconvisible2"
        app:layout_constraintBottom_toTopOf="@+id/tvLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="181dp"
        android:layout_height="82dp"
        android:fontFamily="@font/castoro"
        android:text="Log in to your account"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.281" />

    <TextView
        android:id="@+id/btnCreateNA"
        android:layout_width="420dp"
        android:layout_height="50dp"
        android:layout_marginBottom="500dp"
        android:fontFamily="@font/anek_malayalam"
        android:text="Or create a new account"
        android:textAlignment="center"
        android:textColor="#5757FF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLabel" />

    <EditText
        android:id="@+id/EtEmail"
        android:layout_width="346dp"
        android:layout_height="49dp"
        android:autofillHints="emailAddress"
        android:ems="10"
        android:padding="15dp"
        android:fontFamily="@font/open_sans"
        android:hint="Email Address"
        android:background="@drawable/edit_text_border"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textColorLink="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.246"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53" />

    <EditText
        android:id="@+id/EtPass"
        android:layout_width="349dp"
        android:layout_height="49dp"
        android:autofillHints="password"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Password"
        android:padding="15dp"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_border"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textColorLink="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EtEmail"
        app:layout_constraintVertical_bias="0.039" />

    <TextView
        android:id="@+id/btnforgot"
        android:layout_width="199dp"
        android:layout_height="23dp"
        android:fontFamily="@font/anek_malayalam"
        android:gravity="center"
        android:text="Forgot your password?"
        android:textColor="#5757FF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.661" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="101dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#C27B3C"
        android:fontFamily="@font/anek_malayalam"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />


</androidx.constraintlayout.widget.ConstraintLayout>